#  Usage without proper attribution is prohibited       #
#########################################################

echo "==================================================="
echo "    Vavoo Maker Playlists - Pre-installation       "
echo "==================================================="

# Clean up previous installation
EXTDIR="/usr/lib/enigma2/python/Plugins/Extensions/vavoo-maker/"
if [ -d "$EXTDIR" ]; then
    echo "Removing previous version..."
    rm -rf "$EXTDIR" > /dev/null 2>&1
    echo "✓ Old version removed successfully"
else
    echo "✓ No previous version found"
fi

# Clean temporary files
if [ -d "/tmp/vavoo" ]; then
    echo "Cleaning temporary files..."
    rm -rf "/tmp/vavoo" > /dev/null 2>&1
    echo "✓ Temporary files cleaned"
fi

echo "==================================================="
echo "✓ Pre-installation completed successfully"
echo "==================================================="

exit 0
