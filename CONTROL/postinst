#########################################################

echo "==================================================="
echo "    Vavoo Maker Playlists - Post-installation      "
echo "==================================================="

# Set proper permissions
EXTDIR="/usr/lib/enigma2/python/Plugins/Extensions/vavoo-maker/"
if [ -d "$EXTDIR" ]; then
    echo "Setting file permissions..."
    chmod -R 755 "$EXTDIR" > /dev/null 2>&1
    echo "✓ Permissions set successfully"
fi

# Create temporary directory
echo "Creating temporary directory..."
mkdir -p "/tmp/vavoo" > /dev/null 2>&1
chmod 755 "/tmp/vavoo" > /dev/null 2>&1
echo "✓ Temporary directory created"

echo "==================================================="
echo "✓ Vavoo Maker Playlists v1.0 installed successfully"
echo "✓ Restart GUI to complete installation"
echo "==================================================="

exit 0
